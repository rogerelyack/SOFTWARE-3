<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/orin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yack.holamundo.MainActivity"
    tools:showIn="@layout/activity_main">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_email"
        android:background="@android:drawable/toast_frame"
        android:layout_below="@+id/espacio0">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtemail"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Ingrese E-mail"
            android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_pass"
        android:layout_below="@+id/espacio"
        android:background="@android:drawable/toast_frame">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpass"
            android:layout_below="@+id/txtemail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="Ingrese contraseÃ±a"
            android:autoText="false" />
</android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar sesion"
        android:id="@+id/txtboton"
        android:nestedScrollingEnabled="false"
        android:layout_below="@+id/til_pass"
        android:layout_marginTop="43dp"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_notification_overlay"
        android:textColor="@color/abc_background_cache_hint_selector_material_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">>Registrate&lt;&lt;"
        android:id="@+id/textregistro"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textColor="@color/abc_background_cache_hint_selector_material_light"
        android:background="@drawable/abc_textfield_search_default_mtrl_alpha"
        android:layout_below="@+id/txtboton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/espacio"
        android:layout_below="@+id/til_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/espacio0"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:editable="false"
        android:enabled="true"
        android:visibility="invisible" />

</RelativeLayout>
