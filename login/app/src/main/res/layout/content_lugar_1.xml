<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yack.holamundo.lugar_1"
    tools:showIn="@layout/activity_lugar_1"
    android:background="@drawable/img1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LUGARES CAMPESTRES"
        android:id="@+id/btnlug"
        android:layout_below="@+id/textvis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textvis"
        android:layout_alignEnd="@+id/textvis"
        android:textStyle="bold|italic"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA DE PLATOS GASTRONOMICOS"
        android:id="@+id/btnplatos"
        android:layout_below="@+id/btnlug"
        android:layout_alignRight="@+id/textvis"
        android:layout_alignEnd="@+id/textvis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:background="@android:drawable/checkbox_off_background" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clientes en comun"
        android:id="@+id/btnclie"
        android:layout_below="@+id/btnplatos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:background="@android:drawable/checkbox_off_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre del visitante"
        android:id="@+id/textvis"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnclie"></LinearLayout>

</RelativeLayout>
